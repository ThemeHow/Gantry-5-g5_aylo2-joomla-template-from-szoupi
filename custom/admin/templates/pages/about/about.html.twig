{% extends ajax-suffix ? "@gantry-admin/partials/ajax.html.twig" : "@gantry-admin/partials/base.html.twig" %}

{% block gantry %}
    <div class="g-grid overview-header">
        <div class="g-block">
            <h2 class="theme-title">
                {% if gantry.theme.icon %}<i class="fa fa-{{ gantry.theme.icon }}"></i>{% endif %} {{ gantry.theme.title }}
            </h2>
            <span class="theme-version">v{{ gantry.theme.version }}</span>
            <div>{{ 'GANTRY5_PLATFORM_BY'|trans }} <a href="{{ gantry.theme.author.link }}" aria-label="Template Author's Website" tabindex="1">{{ gantry.theme.author.name }}</a> 
                <a href="szoupi@gmail.com"><i class="fa fa-envelope-o"></i></a> 
                <a href="https://twitter.com/szoupi"><i class="fa fa-twitter"></i></a> </div>
        </div>
        <div class="g-block">
            <span class="float-right">
                <button class="button button-back-to-conf"><i class="fa fa-fw fa-arrow-left"></i> <span>{{ 'GANTRY5_PLATFORM_BACK_SETUP'|trans }}</span></button>
                <a href="{{ gantry.theme.support.link }}" class="button button-primary"><i class="fa fa-support"></i> <span>{{ 'GANTRY5_PLATFORM_SUPPORT'|trans }}</span></a>
                <a href="{{ gantry.theme.documentation.link }}" class="button button-primary"><i class="fa fa-book"></i> <span>{{ 'GANTRY5_PLATFORM_DOCUMENTATION'|trans }}</span></a>
            </span>
        </div>
    </div>

    <div class="g-grid overview-details">
        <div class="g-block size-35">
             <img src="{{ url(info.thumbnail) }}" class="preview-image" alt="">
        </div>

        <div class="g-block">
            <p>AYLO2 template made with ‚ù£ by <a href="http://szoupi.com/">SZOUPI</a>.</p>
            <ul class="overview-list">
                <li><i class="fa fa-asterisk"></i>Powerful</li>
                <li><i class="fa fa-asterisk"></i>Customisable</li>
                <li><i class="fa fa-asterisk"></i>Responsive</li>
                <li><i class="fa fa-asterisk"></i>Beautiful</li>
                <li><i class="fa fa-asterisk"></i>Free</li>

                <p>As i spent many nights modifying the template, I would appreciate if you<br />
                <a href="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&amp;hosted_button_id=5ZV8C2QDF8DLN" target="_blank">buy me a coffee or two <img src="http://szoupi.com/wp-includes/images/smilies/simple-smile.png" alt=":)" class="wp-smiley" style="height: 1em; max-height: 1em;" /></a>. Thanks!
                <br />

            </ul>
        </div>
    </div>

    {% include '@gantry-admin/partials/gantry-details.html.twig' %}
{% endblock %}
