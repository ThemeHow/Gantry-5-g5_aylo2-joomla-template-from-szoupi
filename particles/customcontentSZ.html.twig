{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
	<div class="content-particle">
		<div class="g-grid">
			<div class="g-block">
				<div class="g-content">
					{% if particle.image %}<img src="{{ url(particle.image) }}" class="logo-large" alt="{{ particle.headline|e }}" />{% endif %}
					{% if particle.mainicon %}  <i class="{{ particle.mainicon }} sample-icons" style="display:block;"></i>{% endif %}

					{% if particle.headline %}<h1>{{ particle.headline|raw }}</h1>{% endif %}
					{% if particle.description %}<div class="customcontent-description">{{ particle.description|raw }}</div>{% endif %}
					{% if particle.linktext %}<p><a href="{{ particle.link|e }}" class="button">{{ particle.linktext|e }}</a></p>{% endif %}
				</div>
			</div>
		</div>
		<div class="g-grid">
			{% for subitem in particle.subitems %}
				<div class="g-block {{ subitem.class }}">
					<div class="g-content">
						<i class="{{ subitem.icon }} subitem-icons"></i>
						<h1>{{ subitem.title|raw }}</h1>
						{{ subitem.subtitle|raw }}
						</br>
						{{ subitem.description|raw }}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}